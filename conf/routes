# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# URI for login
GET     /login                      controllers.AuthController.login
POST    /login                      controllers.AuthController.authenticate

# URI for logout
GET     /logout                     controllers.AuthController.logout

# URI for main_page
GET     /mypage                     controllers.HomeController.mypage_main
GET     /mypage/cont1               controllers.HomeController.mypage_cont1
GET     /mypage/cont2               controllers.HomeController.mypage_cont2
GET     /mypage/cont3               controllers.HomeController.mypage_cont3

GET     /bbs                        controllers.HomeController.bbs_main
GET     /management                 controllers.HomeController.management_main

# System Control
# start
GET     /system                     controllers.SystemController.system_main

GET     /system/card                controllers.SystemController.card_main
GET     /system/card/top            controllers.SystemController.card_top
GET     /system/card/create         controllers.SystemController.card_create
POST    /system/card/create         controllers.SystemController.createCard

GET     /system/category            controllers.SystemController.category_main
GET     /system/category/top        controllers.SystemController.category_top
GET     /system/category/create     controllers.SystemController.category_create
POST    /system/category/create     controllers.SystemController.createCategory

GET     /system/department          controllers.SystemController.department_main
GET     /system/department/top      controllers.SystemController.department_top
GET     /system/department/create   controllers.SystemController.department_create
POST    /system/department/create   controllers.SystemController.createDepartment

GET     /system/permission          controllers.SystemController.permission_main
GET     /system/permission/top      controllers.SystemController.permission_top
GET     /system/permission/create   controllers.SystemController.permission_create
POST    /system/permission/create   controllers.SystemController.createPermission

GET     /system/section             controllers.SystemController.section_main
GET     /system/section/top         controllers.SystemController.section_top
GET     /system/section/create      controllers.SystemController.section_create
POST    /system/section/create      controllers.SystemController.createSection

GET     /system/user                controllers.SystemController.user_main
GET     /system/user/top            controllers.SystemController.user_top
GET     /system/user/create         controllers.SystemController.user_create
POST    /system/user/create         controllers.SystemController.createUser
# end
